{
    "tasks": {
      "dev:api": "cargo run",
      "dev:cli": "cd cli && go run .",
  
      "schema": "deno run --allow-run --allow-read --allow-write scripts/schema.ts",
      "schema:gen": "cd schema && pkl eval main.pkl -f yaml > out/openapi.yaml",
      "setup:db": "cargo install sqlx-cli",
      "lang-schemas": "deno run --allow-env --allow-read --allow-net --allow-write scripts/specs.ts"
    },
    "imports": {
      "@openapitools/openapi-generator-cli": "npm:@openapitools/openapi-generator-cli@^2.15.3",
      "quicktype-core": "npm:quicktype-core@^23.0.170"
    }
  }
  